<%- include header %>


	<form name="post-form" class="col-md-5 col-md-offset-3 form-horizontal" method="post">
	<div class="form-signup-heading">Edit The Blog</div>
		<div class="form-group">
			<label for="InputTitle">Title</label>
			<input type="text" name="title" id="InputTitle" class="form-control" placeholder="Title" value="<%=blog.title%>" required>
		</div>
		<div class="form-group">
			<label for="InputContent">Content</label>
			<textarea id="InputContent" name="content" class="form-control" rows="16" required><%= blog.content %></textarea>
		</div>
	    <div class="has-error">
	    <% if (error) { %>
		  <div><%= error %> </div>
		<% } %>
		</div>
		<input type="hidden" name="author_name" value="<%=blog.author_name%>">
        <input class="btn btn-lg btn-primary" type="submit" value="Post">
      </form>

<%- include footer %>