<%- include header %>


	<form name="post-form" class="col-md-5 col-md-offset-3 form-horizontal" method="post" enctype="multipart/form-data">
	<div class="form-signup-heading">New Blog</div>
		<div class="form-group">
			<label for="InputTitle">Title</label>
			<input type="text" name="title" id="InputTitle" class="form-control" placeholder="Title" required>
		</div>
		<div class="form-group">
			<label for="inputContent">Content</label>
			<textarea id="inputContent" name="content" class="form-control" rows="16" required></textarea>
		</div>

        <div class="form-group">
			<label>Images</label>
        <input type="file" name="images" multiple/>
		</div> 

	    <div class="has-error">
	    <% if (error) { %>
		  <div><%= error %> </div>
		<% } %>
		</div>
        <input class="btn btn-lg btn-primary" type="submit" value="Post"></input>
      </form>


<%- include footer %>